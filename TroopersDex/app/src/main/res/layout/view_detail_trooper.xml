<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/star_wars_commander_05"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/trooper_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/trooper_affiliation_cdesc" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/trooper_detail_affiliation_imv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/first_order"
            android:background="@android:color/white"
            />

        <TextView
            android:id="@+id/trooper_description_tv"
            android:layout_width="fill_parent"
            android:layout_marginTop="30dp"
            android:layout_height="fill_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="serif"
            android:textColor="@android:color/holo_green_dark"
            android:text="lorem ipsum dolor sit amet blallblalf as whisaijsiajsiaid robson"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
